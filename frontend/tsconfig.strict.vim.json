{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "strictPropertyInitialization": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src/vite-env.d.ts",
    "src/app/core/commands/**/*",
    "src/app/core/commands/index.ts",
    "src/app/core/commands/useCommands.ts",
    "src/app/core/commands/vimSequenceParser.ts",
    "src/app/core/hooks/useKeyboardShortcuts.ts",
    "src/app/core/hooks/useVimMode.ts",
    "src/app/features/mindmap/components/layout/useShortcutHandlers.ts",
    "src/app/shared/utils/nodeTreeUtils.ts"
  ]
}

