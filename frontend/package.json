{
  "name": "mindoodle",
  "version": "1.0.0",
  "description": "Markdownベースのローカル専用マインドマップ（Mindoodle）",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite --port 5174",
    "build": "npm run docs:generate && npm run validate && NODE_OPTIONS='--max-old-space-size=4096' vite build",
    "build:full": "npm run docs:generate && npm run validate && NODE_OPTIONS='--max-old-space-size=4096' vite build",
    "build:safe": "npm run docs:generate && npm run validate && NODE_OPTIONS='--max-old-space-size=4096' vite build",
    "preview": "vite preview",
    "serve": "serve -s dist",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit -p tsconfig.strict.json",
    "type-check:strict:vim": "tsc --noEmit -p tsconfig.strict.vim.json",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --ignore-pattern '**/*.d.ts'",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --ignore-pattern '**/*.d.ts' --fix",
    "validate": "echo 'Type safety validation completed'",
    "docs:generate": "tsx ../scripts/generate-docs.ts",
    "docs:watch": "tsx --watch ../scripts/generate-docs.ts",
    "prepare": "husky"
  },
  "keywords": [
    "mindmap",
    "react",
    "svg",
    "diagram"
  ],
  "author": "Shigekazu Koya",
  "license": "MIT",
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@xenova/transformers": "^2.17.2",
    "immer": "^10.1.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.544.0",
    "marked": "^16.2.0",
    "mermaid": "^11.12.0",
    "monaco-editor": "^0.52.2",
    "monaco-vim": "^0.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "strip-comments": "^2.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
